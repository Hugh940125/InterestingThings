<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="2">

    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_columnWeight="1"
        android:gravity="center"
        android:text="共享控件"
        android:textSize="15sp"
        android:transitionName="share" />

    <Button
        android:textAllCaps="false"
        app:layout_columnWeight="1"
        android:id="@+id/svg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="矢量动画" />

    <Button
        app:layout_columnWeight="1"
        android:id="@+id/scheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="隐式跳转" />

    <Button
        app:layout_columnWeight="1"
        android:id="@+id/keyboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="键盘" />

    <Button
        app:layout_columnWeight="1"
        android:id="@+id/red_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="小红点" />

    <Button
        android:textAllCaps="false"
        app:layout_columnWeight="1"
        android:id="@+id/animation_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画ImageView" />

    <Button
        app:layout_columnWeight="1"
        android:id="@+id/view_binder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="视图绑定" />

    <Button
        android:textAllCaps="false"
        app:layout_columnWeight="1"
        android:id="@+id/green_dao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GreenDao" />

    <Button
        app:layout_columnWeight="1"
        android:id="@+id/hyper_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="超链接" />

    <Button
        android:textAllCaps="false"
        app:layout_columnWeight="1"
        android:id="@+id/SeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GearSeekBar" />

    <Button
        android:textAllCaps="false"
        app:layout_columnWeight="1"
        android:id="@+id/graphicLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图形锁" />

    <Button
        android:textAllCaps="false"
        app:layout_columnWeight="1"
        android:id="@+id/thread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="线程" />

    <Button
        android:textAllCaps="false"
        app:layout_columnWeight="1"
        android:id="@+id/chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图表" />

    <Button
        android:textAllCaps="false"
        app:layout_columnWeight="1"
        android:id="@+id/surface"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度条" />

</android.support.v7.widget.GridLayout>
